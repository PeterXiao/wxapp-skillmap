.wrapper {
    display: flex;
    padding: 10rpx 0;
    flex-wrap: wrap;
    padding-bottom: 40rpx;
}

.item {
    width: 150rpx;
    height: 265rpx;
    margin: 40rpx 50rpx 0 50rpx;
}
.item .image {
    width: 100%;
    height: 225rpx;
    /*background-color: #E50012;*/
    background-color: #ddd;
}
.item .image image {
    width: 100%;
    height: 100%;
}

.item .name {
    margin-top: 16rpx;
    width: 100%;
    font-size: 24rpx;
    color: #353535;
    margin-left: 4rpx;
}

